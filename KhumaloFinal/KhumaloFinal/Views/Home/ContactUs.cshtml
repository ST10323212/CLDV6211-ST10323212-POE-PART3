@{
    ViewData["Title"] = "Contact Us";
}

<div class="container-fluid" style="background-color: #ffe6e6;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mt-5 mb-5" style="border: none; background-color: #ffe6e6;">
                <div class="card-body">
                    <h2 class="text-center" style="color: #d147a3;">Contact Us</h2>
                    <p class="text-center" style="color: #b30086;">We would love to hear from you! Please fill out the form below and we will get in touch with you shortly.</p>
                    <form>
                        <div class="form-group">
                            <label for="name" style="color: #b30086;">Name</label>
                            <input type="text" class="form-control" id="name" placeholder="Enter your name">
                        </div>
                        <div class="form-group">
                            <label for="email" style="color: #b30086;">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="Enter your email">
                        </div>
                        <div class="form-group">
                            <label for="message" style="color: #b30086;">Message</label>
                            <textarea class="form-control" id="message" rows="5" placeholder="Enter your message"></textarea>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary" style="background-color: #d147a3; border-color: #d147a3;">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
