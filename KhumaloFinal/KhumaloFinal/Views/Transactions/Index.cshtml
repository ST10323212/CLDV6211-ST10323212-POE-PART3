@model IEnumerable<KhumaloFinal.Models.Transaction>

@{
    ViewData["Title"] = "Your Cart";
}

<h1 class="text-center" style="color: #d147a3;">Your Cart</h1>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" src="@item.Products.ImageUrl" alt="Product image" style="max-height: 200px; object-fit: cover;">
                    <div class="card-body" style="background-color: #fff0f5;">
                        <h5 class="card-title" style="color: #d147a3;">@item.Products.Name</h5>
                        <p class="card-text" style="color: #b30086;"><strong>Price:</strong> @item.Products.Price</p>
                        <p class="card-text" style="color: #b30086;"><strong>Quantity:</strong> @item.Quantity</p>
                        <div class="text-center">
                            <a asp-action="Details" asp-route-id="@item.TransactionId" class="btn btn-secondary" style="background-color: #d147a3; border-color: #d147a3;">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.TransactionId" class="btn btn-danger" style="background-color: #ff66b2; border-color: #ff66b2;">Remove</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="container text-center mt-4">
    <form asp-action="Checkout" asp-controller="Transactions" method="post">
        <button type="submit" class="btn btn-primary" style="background-color: #d147a3; border-color: #d147a3;">Checkout</button>
    </form>
</div>

